<div class="login-form">

  <%= form_for(resource, as: resource_name, html: {class: "form-sign"}, url: session_path(resource_name)) do |f| %>

    <% if resource_name == :manager %>
      <% content_for :navbar do %>
        <%= render 'navbar/manager' %>
      <% end %>
    <% end %>

    <h4 class="modal-title"><%= t('global.login') %> <%= f.label :log_in_as %></h4>
    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('global.login'), class: "btn btn-lg btn-primary btn-block" %>
    </div>

    <% if resource_name == :manager %>
      <br>
      <%= link_to(t('forms.sessions.new.new_manager'), new_manager_registration_path,
                  class: "", role: "button") %>
    <% end %>

  <% end %>


  <%= render "devise/shared/links" %>

</div>