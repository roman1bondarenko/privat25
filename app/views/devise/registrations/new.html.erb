<div class="login-form">
  <h4 class="modal-title"><%= t('forms.registrations.new.title') %></h4>

  <%= form_for(resource, as: resource_name, html: {class: "form-sign"}, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name %><br/>
      <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "First name" %>
    </div>

    <div class="field">
      <%= f.label :second_name %><br/>
      <%= f.text_field :second_name, class: "form-control", autofocus: true, autocomplete: "Second name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('forms.registrations.new.chars_min') %>)</em>
      <% end %><br/>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up" ,class: "btn btn-lg btn-primary btn-block"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>